<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:background="#fff"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/d_addpatient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_onclick"
            android:text="Ajouter Un Patient "
            android:textColor="#fff" />
        <Button
            android:id="@+id/d_showList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_onclick"
            android:text="Consulter la liste des Patients "
            android:textColor="#fff" />

        <Button
            android:id="@+id/d_editProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_onclick"
            android:text="Editer le Profile"
            android:textColor="#fff" />

        <Button
            android:id="@+id/d_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/btn_onclick"
            android:text="Quitter"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>